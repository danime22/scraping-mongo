<div class="container">
    <div class="row">
        <div class="col">

            <div class="card comment-card">

                <div class="card-body">
                    {{#if article.editComment}}
                    <form action="/updateComment/{{article._id}}/{{article.editIndex}}" method="post">
                        {{else}}
                        <form action="/add/{{article._id}}" method="post">
                            {{/if}}
                            <div class="form-group">
                                <h5>{{article.title}}</h5>
                                <p class="card-text">{{article.summary}}</p>
                            </div>

                            <div class="form-group">
                                <label for="exampleFormControlTextarea1">Write a Comment here: </label><br>


                                <textarea name="comment" class="form-control" rows="3">
                            {{#if article.editComment}}
                            {{article.editComment.comment}}
                            {{/if}}
                            </textarea>
                                <br>

                            </div>

                            <input type="submit" class="btn btn-primary btn-sm" value="SUBMIT" />
                        </form>


                        <br><br>
                        <a href="http://localhost:3019/" class="card-link">Back to Page</a>
                </div>
            </div>

        </div>

    </div>
    <br>
    <br>
    <br>
    <h4>Comments:</h4>
    <div class="row comment-row">

        <div class="col">
            <div id="comment-section">
                {{#each article.comments}}
                <p>{{comment}}</p>

                <a href="/GetCommentforUpdate/{{@root.article._id}}/{{@index}}">Edit</a>
                <a href="/delete/{{@root.article._id}}/{{@index}}">Delete</a>
                <hr>
                {{/each}}

            </div>
            <br>
        </div>
    </div>

</div>